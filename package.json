{
  "name": "micropayments-platform",
  "homepage": "https://adpinola.github.io/Micropayments/",
  "version": "0.1.0",
  "description": "Simple platform to deliver micropayments",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev": "truffle deploy --network ganache && react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "contract:build": "truffle compile",
    "contract:deploy": "truffle deploy",
    "contract:test": "truffle run coverage",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "solhint": "./node_modules/.bin/solhint -f table contracts/**/*.sol",
    "lint:eslint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "format:eslint": "eslint --fix src/**/*.{js,jsx,ts,tsx}",
    "lint:prettier": "prettier --check \"**/*.{js,jsx,ts,tsx}\" ",
    "format:prettier": "prettier --write \"**/*.{js,jsx,ts,tsx}\" \"contracts/**/*.sol\"",
    "linter": "npm run lint:eslint & npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier"
  },
  "keywords": [
    "solidity",
    "smart",
    "contracts",
    "web3",
    "react",
    "truffle",
    "micropayments"
  ],
  "author": "adpinola",
  "license": "ISC",
  "dependencies": {
    "@openzeppelin/contracts": "^4.4.2",
    "@truffle/hdwallet-provider": "^2.0.1",
    "@types/node": "^17.0.13",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.3",
    "bootstrap": "^5.1.3",
    "ethereumjs-util": "^7.1.4",
    "react": "^17.0.2",
    "react-bootstrap": "^2.1.1",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-router-dom": "^6.2.1",
    "react-scripts": "^4.0.3",
    "sass": "^1.49.0",
    "typescript": "^4.5.5",
    "web-vitals": "^2.1.4",
    "web3": "^1.7.0",
    "web3-eth-contract": "^1.7.0",
    "web3-utils": "^1.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.0",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint-config-airbnb-typescript-prettier": "^5.0.0",
    "eslint-plugin-jest": "^26.0.0",
    "ganache-time-traveler": "^1.0.16",
    "gh-pages": "^3.2.3",
    "prettier": "^2.5.0",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "regenerator-runtime": "^0.13.9",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.18"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
